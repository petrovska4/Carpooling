<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    tools:context=".MyVehiclesActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/vehicleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Car"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/vehicleBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand: Toyota"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/vehicleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color: Red"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/vehicleSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats: 4"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/vehicleLicence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Licence: ABC123"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/vehicleOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner: John Doe"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
